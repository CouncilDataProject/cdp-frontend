{
  "name": "@councildataproject/cdp-frontend",
  "engines": {
    "node": "12.x",
    "npm": "6.x"
  },
  "version": "0.1.2",
  "description": "Front-end tooling library for React components for CDP instance deployments.",
  "main": "lib/index.js",
  "module": "es/index.js",
  "browser": "dist/index.js",
  "types": "type-declarations",
  "scripts": {
    "build": "npm-run-all --print-label clean --parallel bundle transpile:commonjs transpile:es generateTypes",
    "bundle": "cross-env NODE_ENV=production webpack --config webpack.config.js --display-modules",
    "clean": "rimraf es lib dist type-declarations",
    "format": "prettier --write src/**/*",
    "checkFormat": "prettier --check src/**/*.tsx",
    "generateTypes": "tsc -p tsconfig.base.json --emitDeclarationOnly",
    "lint": "eslint src/**/*.{js,jsx,ts,tsx}",
    "test": "jest --verbose --coverage",
    "transpile:commonjs": "cross-env TS_NODE_PROJECT=tsconfig.commonjs.json BABEL_ENV=commonjs babel src --out-dir lib --extensions .ts,.tsx,.js,.jsx --ignore src/**/*.test.ts",
    "transpile:es": "cross-env TS_NODE_PROJECT=tsconfig.es.json babel src --out-dir es --extensions .ts,.tsx,.js,.jsx --ignore src/**/*.test.ts",
    "typeCheck": "tsc --noEmit",
    "storybook": "start-storybook -p 6006",
    "build-storybook-docs": "build-storybook",
    "deploy-storybook-docs": "gh-pages -d storybook-static"
  },
  "files": [
    "es",
    "lib",
    "dist",
    "type-declarations",
    "README.md",
    "package.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": "To Huynh, Trung Ngo, Nic Weber, Jackson Maxfield Brown",
  "license": "MIT License",
  "devDependencies": {
    "@babel/cli": "~7.7",
    "@babel/core": "~7.7",
    "@babel/preset-env": "~7.7",
    "@babel/preset-react": "~7.7",
    "@babel/preset-typescript": "~7.7",
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "@storybook/addon-a11y": "^6.1.10",
    "@storybook/addon-actions": "^6.1.10",
    "@storybook/addon-docs": "^6.1.10",
    "@storybook/addon-essentials": "^6.1.10",
    "@storybook/addon-info": "^5.3.21",
    "@storybook/addon-knobs": "^6.1.10",
    "@storybook/addon-links": "^6.1.10",
    "@storybook/react": "^6.1.10",
    "@storybook/theming": "^6.1.10",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/jest": "^25.1.4",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@typescript-eslint/eslint-plugin": "~2.8",
    "@typescript-eslint/parser": "~2.8",
    "babel-loader": "~8.0",
    "cross-env": "^7.0.2",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "enzyme-to-json": "^3.4.4",
    "eslint": "~6.6",
    "eslint-config-prettier": "~6.7",
    "eslint-plugin-react": "^7.19.0",
    "gh-pages": "^3.1.0",
    "husky": "~3.1",
    "jest": "^25.1.0",
    "lint-staged": "~9.4",
    "moment": "^2.24.0",
    "npm-run-all": "~4.1",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "react": "^16.13.0",
    "react-docgen-typescript-loader": "^3.7.1",
    "react-dom": "^16.13.0",
    "rimraf": "~3.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.88.2",
    "ts-jest": "^26.1.1",
    "ts-node": "~8.5",
    "typescript": "~3.7",
    "webpack": "~4.41",
    "webpack-cli": "~3.3"
  },
  "peerDependencies": {
    "@emotion/core": "^10.0",
    "@emotion/styled": "^10.0",
    "moment": "^2.24.0",
    "react": "^16.0",
    "semantic-ui-react": "^0.88.2"
  },
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "@mozilla-protocol/core": "^13.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CouncilDataProject/cdp-frontend.git"
  },
  "keywords": [
    "civic technology",
    "open government",
    "data access"
  ],
  "bugs": {
    "url": "https://github.com/CouncilDataProject/cdp-frontend/issues"
  },
  "homepage": "https://github.com/CouncilDataProject/cdp-frontend"
}
